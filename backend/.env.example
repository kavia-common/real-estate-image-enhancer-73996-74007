# Environment configuration for Real Estate Image Enhancer Backend

# General
ENV=development
LOG_LEVEL=INFO
SITE_URL=http://localhost:3000

# Database (Async SQLAlchemy URL, psycopg driver)
# Example: postgresql+psycopg://postgres:password@localhost:5432/realestate
DATABASE_URL=

DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Auth / JWT
JWT_SECRET_KEY=please-change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
PASSWORD_HASH_SCHEME=bcrypt

# Storage
STORAGE_BACKEND=local  # local | s3
LOCAL_STORAGE_PATH=./data/uploads

# S3 (only if STORAGE_BACKEND=s3)
S3_BUCKET_NAME=
S3_REGION=
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Stripe (stub integration)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_BASIC=
STRIPE_PRICE_PRO=

# Limits
TRIAL_IMAGE_CREDITS=10
MAX_BATCH_UPLOAD=30

# CORS
CORS_ALLOW_ORIGINS=*
